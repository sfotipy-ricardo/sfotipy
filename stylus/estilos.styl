@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz official 
// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-o-animation parametro
// 	-ms-animation parametro
// 	animation parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img 
	vertical-align top
ul
	margin 0
	padding 0
.padding
	padding 1em
.padding-tb
	padding 1em 0
.right-text
	text-align right
.round
	border-radius 50%
	overflow hidden
.left
	float left
.right
	float right
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.container
	font-size 0
	padding 1.4rem
	text-align center
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
	&.red
		color red
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.author
	color gris_claro
.menu
	display none  
.center-block
	margin 0 auto
.center-text
	text-align center
.relative
	position relative
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	vertical-align: top
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		left 0
	.max	
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto 
	.state
		background red
		border-radius 5px
		height 5px
		position relative
		width 30%
		animation 10s state infinite linear
		
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite
@keyframes state
	0% 
		width 0
	100%
		width 100%		
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
.playing
	&.small
		width 20em
		margin 0 auto
.wrap
	width 1000px
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em
.playlist
	display none
	width 22em
	padding 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item 
		padding 1em 0
	.action
		font-size .8em
.isotipo
		width 122px
.logo
	background white
	display none
	overflow hidden
	padding 1.3em 0
.avatar
	width 38px
	height 38px
	margin-right .5em
.username
	color gris_claro
	position relative
	top 9px
	&:after
		border-left 7px solid transparent	
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em

@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		margin 0 auto
		&.medium
			width auto
@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.header
		height auto
		border none
		.title
			display none
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_oscuro
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.music
		width 32.5em
		float left
		.description
			display none
	.logo
	.playlist
		display block